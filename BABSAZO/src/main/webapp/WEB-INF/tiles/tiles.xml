<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
 "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
 "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
<!-- jsp파일을 조립하여 layoutAll.jsp에 연결하는 부분 -->
 <definition name="default_layout" template="/WEB-INF/layout/layoutAll.jsp" >
  <!-- <put-attribute name="main" value="" /> -->
  <!-- <put-attribute name="include" value="/WEB-INF/tiles/tile/include.jsp" /> -->
  <!-- <put-attribute name="footer" value="/WEB-INF/tiles/tile/footer.jsp" /> -->
  
  <put-attribute name="headerFooter" value="/WEB-INF/tiles/tile/headerFooter.jsp" />
  <put-attribute name="sideMenu" value="/WEB-INF/tiles/tile/sideMenuBar.jsp" />
 </definition>


<!-- admin 계정으로 로그인 한 뒤 sideMenuBar -->
<definition name ="/admin2/*" extends = "adminSide">
	<put-attribute name = "adminSide" value = "/WEB-INF/view/admin2/" />
</definition>

 <!-- 개별 뷰 -->
 <definition name="main" extends="default_layout">
  <put-attribute name="main" value="/WEB-INF/views/index.jsp" />
 </definition>

 <!-- views 바로 아래에 있는 파일들을 찾는 wildcard -->
 <definition name="/*" extends="default_layout">
  <put-attribute name="main" value="/WEB-INF/views/{1}.jsp" />
 </definition>

 <!-- admin 폴더 안의 파일들을 찾는 wildcard -->
 <definition name="/admin/*" extends="default_layout">
  <put-attribute name="main" value="/WEB-INF/views/admin/{1}.jsp" />
 </definition>

 <!-- view 아래의 폴더 안의 파일을 찾는 wildcard  -->
 <definition name="/*/*" extends="default_layout">
  <put-attribute name="main" value="/WEB-INF/views/{1}/{2}.jsp" />
 </definition>
</tiles-definitions>
